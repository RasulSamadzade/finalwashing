<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Defect Identifier" Height="350" Width="500">
    <Grid Margin="0,0,3.333,-0.333">
        <ComboBox Name="Type" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Type_SelectionChanged"/>
        <TextBox Name="Name"  HorizontalAlignment="Left" Height="23" Margin="10,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ID_Code" HorizontalAlignment="Left" Height="23" Margin="10,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="Layer" HorizontalAlignment="Left" Margin="160,20,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="TopBottom" HorizontalAlignment="Left" Margin="160,64,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="Defect" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Defect_SelectionChanged"/>
        <Label Content="Tipo di set" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,-6,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nome progetto" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="ID code" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Tipo di difetto" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Tipo di layer" FontWeight="Bold" HorizontalAlignment="Left" Margin="160,-6,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Top/Bottom" FontWeight="Bold" HorizontalAlignment="Left" Margin="160,38,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Input1" HorizontalAlignment="Left" Height="23" Margin="10,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="Input1_TextChanged"/>
        <TextBox x:Name="Input2" HorizontalAlignment="Left" Height="23" Margin="160,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="Input2_TextChanged"/>
        <Label Name="Input1_Lbl" Content="" HorizontalAlignment="Left" Margin="10,173,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Name="Input2_Lbl" Content="" HorizontalAlignment="Left" Margin="159,172,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Decision" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,231,0,0" TextWrapping="Wrap" Width="277" RenderTransformOrigin="0.497,0.427" Height="35" VerticalAlignment="Top"/>
        <Button x:Name="Send_Email" FontWeight="Bold" Content="Send email" Margin="10,271,0,0" Height="21" VerticalAlignment="Top" Click="Final_Click" HorizontalAlignment="Left" Width="277"/>
        <Image x:Name="Logo" HorizontalAlignment="Left" Height="272" Margin="297,20,0,0" VerticalAlignment="Top" Width="183"/>
        <Button Content="Select Image" FontWeight="Bold" HorizontalAlignment="Left" Margin="160,111,0,0" VerticalAlignment="Top" Width="119" Height="23" Click="Select_Image"/>
        <Button Content="Set Limits" FontWeight="Bold" HorizontalAlignment="Left" Margin="160,155,0,0" VerticalAlignment="Top" Height="23" Width="119" Click="Limits_Click"/>
    </Grid>
</Window>
